@{
    ViewData["Title"] = "Home";
}


<div class="row">
    <div class="col-md-6">
        <h2>Upload Your Image</h2>
        <ul>
            <li>Allowed file extensions: JPG, PNG, JPEG, TIFF</li>
            <li>Max file size: 28MB</li>
            <li>Image will be converted to PDF format.</li>
        </ul>



    </div>
</div>

<br />
<span class="alert-danger">@TempData["Message"]</span>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-md-4">
                    <input type="file" name="file" />
                </div>
                
            </div>

            <div class="row" style="margin-top:10px;">
                <div class="col-md-4">
                    <input type="submit" name="Submit" id="Submit" value="Upload" />
                </div>
            </div>


        }
    </div>
</div>


